{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'endlessrecorder'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=endlessrecorder",
                    "--package=endlessrecorder"
                ],
                "filter": {
                    "name": "endlessrecorder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release executable 'endlessrecorder'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=endlessrecorder",
                    "--package=endlessrecorder",
                    "--release"
                ],
                "filter": {
                    "name": "endlessrecorder",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}